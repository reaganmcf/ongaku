{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      "dist",
      "dist/**",
      "node_modules",
      "node_modules/**",
      ".turbo",
      ".next",
      ".next/**"
    ]
  },
  "linter": {
    "ignore": [".wrangler", "node_modules", "**/*.gen.*"],
    "enabled": true
  },
  "formatter": {
    "indentStyle": "space"
  }
}
